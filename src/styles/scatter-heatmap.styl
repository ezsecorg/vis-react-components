// Column expansion markers of heatmap
.ScatterHeatmapHybrid .markerCol
  stroke #5B5B5B
  stroke-width 1px
  shape-rendering crispEdges
  cursor cell

.ScatterHeatmapHybrid .markerCol:hover
  stroke black

// Individual cells of heatmap
.ScatterHeatmapHybrid .bin
  stroke #5B5B5B
  stroke-width 1px
  shape-rendering crispEdges

// Scaterplot points
.ScatterHeatmapHybrid .point
  stroke #FFF
  stroke-width 1px

.ScatterHeatmapHybrid .point:hover
  stroke #000
  stroke-width 2px

// Labels
.ScatterHeatmapHybrid .label
  fill #999
  fill-opacity 0.5
  font-size 11px
  text-anchor end

// Axes
.ScatterHeatmapHybrid .axis path,
.ScatterHeatmapHybrid .axis line
  fill none
  stroke #666
  shape-rendering crispEdges

.ScatterHeatmapHybrid .axis text
  fill #666
  font-size 13px
  cursor default
  -webkit-user-select none  /* Chrome all / Safari all */
  -moz-user-select none     /* Firefox all */
  -ms-user-select none      /* IE 10+ */
  user-select none          /* Likely future */
